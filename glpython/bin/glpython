""" Python OpenGL

Python Opengl is an OpenGL terminal. Several backends may be used since the
terminal itself only depends on OpenGL primitives and extensions (like the
framebuffer object extension).
"""


if __name__ == '__main__':
    from glpython import window
    from optparse import OptionParser

    parser = OptionParser()
    parser.add_option ('-b', '--backend', action='store', dest='backend',
                       default='gtk', help='Backend to use (gtk, wx or sdl)')
    parser.add_option ('-f', '--fps', action='store', dest='fps',
                       default=30.0, help='Frame per second')
    parser.add_option ('-g', '--geometry', action='store', dest='size',
                       default="657x410", help="Window geometry (WxH)")
                       
    (options, args) = parser.parse_args()
    s = options.size.split('x')
    w = int(s[0])
    h = int(s[1])
    fps = int (options.fps)

    win,fig = window (size = (w,h), fps = fps, title="GLPython",
                      has_terminal = True, backend=options.backend)
    win.external_event_loop = True
    if (len(args)):
        win.terminal.open (args[0])
    win.external_event_loop = False
    win.set_layout(1)
    win.show()

